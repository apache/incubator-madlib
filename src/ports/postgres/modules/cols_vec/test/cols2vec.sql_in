DROP TABLE IF EXISTS cols2vec;
CREATE TABLE cols2vec (
    id              bigint,
    label           int,
    feat1           int,
    feat2           int,
    feat3           float,
    other_col       float
);

INSERT INTO cols2vec  VALUES
