DROP TABLE IF EXISTS hits_out, hits_out_summary;
SELECT hits(
         'vertex',        -- Vertex table
         'id',            -- Vertex id column
         'edge',          -- edge table
         'src=src, dest=dest', -- edge args
         'hits_out',       -- Output table of HITS
         2);                  -- Max number of iteration

