FROM out WHERE src = 3 AND "DEST" = 4;
-- Path
SELECT MADLIB_SCHEMA.graph_apsp_get_path('out',0,7,'out_path');

-- Grouping
CREATE TABLE edge_gr AS
(SELECT *, 0 AS grp FROM "EDGE"
UNION
SELECT *, 1 AS grp FROM "EDGE" WHERE src < 6 AND "DEST" < 6
UNION
SELECT *, 2 AS grp FROM "EDGE" WHERE src < 6 AND "DEST" < 6
);

INSERT INTO edge_gr VALUES
(7,NULL,NULL,1),
(4,0,-20,2);

SELECT MADLIB_SCHEMA.graph_apsp('vertex',NULL,'edge_gr','dest="DEST"','out_gr','grp');

SELECT MADLIB_SCHEMA.assert(weight = 2, 'Wrong output in graph (APSP)')
	FROM out_gr WHERE src = 0 AND "DEST" = 5 AND grp = 1;
SELECT MADLIB_SCHEMA.assert(parent = 2, 'Wrong output in graph (APSP)')
	FROM out_gr WHERE src = 0 AND "DEST" = 5 AND grp = 1;

