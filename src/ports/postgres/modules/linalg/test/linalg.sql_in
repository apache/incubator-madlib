/* -----------------------------------------------------------------------------
 * Test linear-algebra operations.
 * -------------------------------------------------------------------------- */

\set p 3

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.dist_pnorm(
            ARRAY[-1.2, 0,  10,    5,    3,    9],
            ARRAY[10.1, 43, 5.2, 13, 3, -10],
            :p),
        ((10.1 + 1.2)^(:p) + 43^(:p) + (10 - 5.2)^(:p) + (13 - 5)^(:p) + (9 + 10)^(:p))^(1./:p)
    ) < 1e-5,
    'Incorrect 3-norm'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.dist_pnorm(
            ARRAY[-1.2, 0,  10,    5,    3,    9],
            ARRAY[10.1, 43, 5.2, 13, 3, -10],
            'Inf'::float8),
        43
    ) < 1e-5,
    'Incorrect infinity-norm'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.dist_inf_norm(
            ARRAY[-1.2, 0,  10,    5,    3,    9],
            ARRAY[10.1, 43, 5.2, 13, 3, -10]),
        43
    ) < 1e-5,
    'Incorrect infinity-norm'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.norm2(ARRAY[-1.2, 0,  10,    5,    3,    9]),
        sqrt(        1.2^2  + 10^2 + 5^2 + 3^2 + 9^2)
    ) < 1e-5,
    'Incorrect 2-norm'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.norm1(ARRAY[-1.2, 0,  10,  5,  3,  9]),
        (            1.2    + 10 + 5 + 3 + 9)
    ) < 1e-5,
    'Incorrect 1-norm'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.dist_norm1(
            ARRAY[-1.2,  0,  10,  5, 3,   9],
            ARRAY[10.1, 43, 5.2, 13, 3, -10]),
        (10.1 + 1.2) + 43 + (10 - 5.2) + (13 - 5) + (9 + 10)
    ) < 1e-5,
    'Incorrect distance w.r.t. 1-norm'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.dist_norm2(
            ARRAY[-1.2,  0,  10,  5, 3,   9],
            ARRAY[10.1, 43, 5.2, 13, 3, -10]),
        sqrt((10.1 + 1.2)^2 + 43^2 + (10 - 5.2)^2 + (13 - 5)^2 + (9 + 10)^2)
    ) < 1e-5,
    'Incorrect distance w.r.t. 2-norm'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.cosine_similarity( x ,y),
	((10.1 * -1.2) + (10 * 5.2) + (13 * 5) + (3 * 3) + (9 * -10)) /
            (MADLIB_SCHEMA.norm2(x) * MADLIB_SCHEMA.norm2(y))
    ) < 1e-5,
    'Incorrect cosine similarity score'
) FROM (
    SELECT ARRAY[-1.2,  0,  10,  5, 3,   9] AS x,
           ARRAY[10.1, 43, 5.2, 13, 3, -10] AS y
) AS ignored;

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.squared_dist_norm2(
            ARRAY[-1.2,  0,  10,  5, 3,   9],
            ARRAY[10.1, 43, 5.2, 13, 3, -10]),
        (10.1 + 1.2)^2 + 43^2 + (10 - 5.2)^2 + (13 - 5)^2 + (9 + 10)^2
    ) < 1e-5,
    'Incorrect squared distance w.r.t. 2-norm'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.dist_angle(x, y),
        acos(
            ((10.1 * -1.2) + (10 * 5.2) + (13 * 5) + (3 * 3) + (9 * -10)) /
            (MADLIB_SCHEMA.norm2(x) * MADLIB_SCHEMA.norm2(y))
        )
    ) < 1e-5,
    'Incorrect angle'
) FROM (
    SELECT ARRAY[-1.2,  0,  10,  5, 3,   9] AS x,
           ARRAY[10.1, 43, 5.2, 13, 3, -10] AS y
) AS ignored;

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.dist_tanimoto(x, y),
        (
            1. - dot / (MADLIB_SCHEMA.norm2(x)^2 + MADLIB_SCHEMA.norm2(y)^2 - dot)
        )
    ) < 1e-5,
    'Incorrect Tanimoto distance'
) FROM (
    SELECT ARRAY[-1.2,  0,  10,  5, 3,   9] AS x,
           ARRAY[10.1, 43, 5.2, 13, 3, -10] AS y,
           ((10.1 * -1.2) + (10 * 5.2) + (13 * 5) + (3 * 3) + (9 * -10)) AS dot
) AS ignored;

SELECT MADLIB_SCHEMA.assert(
    dist1 = dist2 AND dist2 = dist3,
        'Incorrect closest column.'
) FROM (
    SELECT
        MADLIB_SCHEMA.squared_dist_norm2(matrix[column_id + lb:column_id + lb], x) AS dist1,
        distance AS dist2,
        least AS dist3,
        *
    FROM (
        SELECT
            (MADLIB_SCHEMA.closest_column(matrix, x)).*,
            least(
                MADLIB_SCHEMA.squared_dist_norm2(a, x),
                MADLIB_SCHEMA.squared_dist_norm2(b, x),
                MADLIB_SCHEMA.squared_dist_norm2(c, x),
                MADLIB_SCHEMA.squared_dist_norm2(d, x)
            ),
            array_lower(matrix, 2) AS lb,
            *
        FROM (
            SELECT
                ARRAY[a, b, c, d] AS matrix,
                *
            FROM (
                SELECT
                    ARRAY[ 1.2,  4.5, -1.6,  9.2, 100.3, 34.3] AS a,
                    ARRAY[-3.1, -5.4,  6.2, 10.2,  59.2, -8.2] AS b,
                    ARRAY[42  , 32  ,  3.1,  8.1,  24.3, 10.3] AS c,
                    ARRAY[-5.1, 12.2,  3.9, -6.4,  39.9, -4.9] AS d,
                    ARRAY[1.2, 5, 6.4, -5, 56, 0] AS x
            ) AS ignored
        ) AS ignored
    ) AS ignored
) AS ignored;

SELECT
    MADLIB_SCHEMA.closest_columns(
        ARRAY[
            ARRAY[0,0],
            ARRAY[0,1],
            ARRAY[1,0],
            ARRAY[0,1]
        ]::DOUBLE PRECISION[][],
        ARRAY[.5,.5]::DOUBLE PRECISION[],
        2::INTEGER
        );

/* All values in the following test are exact sums of powers of 2, so
 * floating-point arithmetic needs to be exact. */
SELECT MADLIB_SCHEMA.assert(
    (c1).column_ids = ARRAY[0,1]::INTEGER[] AND
    (c1).distances = ARRAY[0.5,0.5]::DOUBLE PRECISION[] AND

    (c2).column_ids = ARRAY[0,1]::INTEGER[] AND
    (c2).distances = ARRAY[0.125,0.625]::DOUBLE PRECISION[] AND

    (c3).column_ids = ARRAY[1,0]::INTEGER[] AND
    (c3).distances = ARRAY[0.125,0.625]::DOUBLE PRECISION[] AND

    (c4).column_ids = ARRAY[3,0]::INTEGER[] AND
    (c4).distances = ARRAY[0.125,0.625]::DOUBLE PRECISION[] AND

    (c5).column_ids = ARRAY[0,3]::INTEGER[] AND
    (c5).distances = ARRAY[0.3125,0.3125]::DOUBLE PRECISION[],

    'Incorrect closest columns.')
FROM (
    SELECT
        MADLIB_SCHEMA.closest_columns(matrix, ARRAY[.5,.5]::DOUBLE PRECISION[], num) AS c1,
        MADLIB_SCHEMA.closest_columns(matrix, ARRAY[.25,.25]::DOUBLE PRECISION[], num) AS c2,
        MADLIB_SCHEMA.closest_columns(matrix, ARRAY[.75,.25]::DOUBLE PRECISION[], num) AS c3,
        MADLIB_SCHEMA.closest_columns(matrix, ARRAY[.25,.75]::DOUBLE PRECISION[], num) AS c4,
        MADLIB_SCHEMA.closest_columns(matrix, ARRAY[.25,.5]::DOUBLE PRECISION[], num) AS c5
    FROM (
        SELECT
            ARRAY[
                ARRAY[0,0],
                ARRAY[1,0],
                ARRAY[1,1],
                ARRAY[0,1]
            ]::DOUBLE PRECISION[][] AS matrix,
            2 AS num,
            'MADLIB_SCHEMA.squared_dist_norm2'::REGPROC AS metric
    ) AS ignored
) AS ignored;


CREATE TABLE some_vectors (
    id SERIAL,
    x FLOAT8[]
);

INSERT INTO some_vectors(x) VALUES
(ARRAY[1,0,0,0]),
(ARRAY[0,1,0,0]),
(ARRAY[0,0,1,0]),
(ARRAY[0,0,0,2]);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(MADLIB_SCHEMA.avg(x), ARRAY[1./4., 1./4., 1./4., 2./4.]) < 1e-5,
    'Incorrect average of vectors'
)
FROM some_vectors;

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(MADLIB_SCHEMA.normalized_avg(x), ARRAY[1./2., 1./2., 1./2., 1./2.]) < 1e-5,
    'Incorrect normalized average of vectors'
)
FROM some_vectors;

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.matrix_column(matrix, 0) = ARRAY[1,2]::DOUBLE PRECISION[] AND
    MADLIB_SCHEMA.matrix_column(matrix, 1) = ARRAY[3,4]::DOUBLE PRECISION[],
    'Vector returned does not match column in matrix.')
FROM (
    SELECT ARRAY[ARRAY[1,2],ARRAY[3,4]]::DOUBLE PRECISION[][] AS matrix
) ignored;

SELECT MADLIB_SCHEMA.assert(array_dims(a) = '[1:2]' AND a = ARRAY[3,4]::float8[],
              'Wrong results from index_2d_array')
FROM (
    SELECT MADLIB_SCHEMA.index_2d_array(ARRAY[ARRAY[1,2],ARRAY[3,4]]::float8[], 2) AS a
) subq;

