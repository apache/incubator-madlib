-- adding 1.0 on left and right to avoid division by zero
SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        1.0 + MADLIB_SCHEMA.dist_jaccard(ARRAY['a', 'b', 'c']::TEXT[], ARRAY['a', 'b', 'c']::TEXT[]),
        1.0 + 0.0) < 1e-5,
    'Incorrect Jaccard distance'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        1.0 + MADLIB_SCHEMA.dist_jaccard(ARRAY['a', 'a', 'a', 'b', 'c']::TEXT[],
                     ARRAY['a', 'b', 'c']::TEXT[]),
        1.0 + 0.0) < 1e-5,
    'Incorrect Jaccard distance'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.dist_jaccard(ARRAY['a', 'a', 'e', 'e', 'f', 'b', 'c']::TEXT[],
                     ARRAY['a', 'b', 'c']::TEXT[]),
        0.4) < 1e-5,
    'Incorrect Jaccard distance'
);

-- Jaccard distance is not suitable for sets with floating point values
SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.dist_jaccard(ARRAY[0.4, 1, 0.5]::TEXT[],
                     ARRAY[0.4, 0.1, 0.5]::TEXT[]),
        0.5) < 1e-5,
    'Incorrect Jaccard distance'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        MADLIB_SCHEMA.dist_jaccard(ARRAY[1, 2, 3, 4]::TEXT[],
                     '{}'::TEXT[]),
        1.0) < 1e-5,
    'Incorrect Jaccard distance'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.relative_error(
        1.0 + MADLIB_SCHEMA.dist_jaccard('{}'::TEXT[],
                           '{}'::TEXT[]),
        1.0 + 0.0) < 1e-5,
    'Incorrect Jaccard distance'
);

SELECT MADLIB_SCHEMA.assert(
    MADLIB_SCHEMA.dist_jaccard(ARRAY[1, 2, 3, 4]::TEXT[],
                 NULL::TEXT[]) is NULL,
    'Incorrect Jaccard distance'
);
