CREATE TABLE vector(
    id  integer,
    v   float8[]);
INSERT INTO vector VALUES
(1, '{4,3}'),
(2, '{8,6}'),
(3, '{12,9}');

SELECT
    MADLIB_SCHEMA.avg(v),
    MADLIB_SCHEMA.normalized_avg(v),
    MADLIB_SCHEMA.matrix_agg(v)
FROM vector;
