CREATE TABLE matrix(
    id  integer,
    m   float8[]);
INSERT INTO matrix VALUES
(1, '{{4,5},{3,5},{9,0}}');

SELECT
    MADLIB_SCHEMA.get_row(m, 1) AS row_1,
    MADLIB_SCHEMA.get_row(m, 2) AS row_2,
    MADLIB_SCHEMA.get_row(m, 3) AS row_3,
    MADLIB_SCHEMA.get_col(m, 1) AS col_1,
    MADLIB_SCHEMA.get_col(m, 2) AS col_2
FROM matrix;

