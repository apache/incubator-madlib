-- user doc examples
---------------------------------------------------------------------------
CREATE TABLE two_vectors(
    id  integer,
    a   float8[],
    b   float8[]);
INSERT INTO two_vectors VALUES
(1, '{3,4}', '{4,5}'),
(2, '{1,1,0,-4,5,3,4,106,14}', '{1,1,0,6,-3,1,2,92,2}');

SELECT
    id,
    MADLIB_SCHEMA.assert(abs(MADLIB_SCHEMA.norm1(a) - 138) < 1e-6, 'Wrong answer: MADLIB_SCHEMA.norm1() example'),
    MADLIB_SCHEMA.assert(abs(MADLIB_SCHEMA.norm2(a) - 107.238052947636) < 1e-6, 'Wrong answer: MADLIB_SCHEMA.norm2() example')
FROM two_vectors
WHERE id = 2;

SELECT
    id,
    MADLIB_SCHEMA.assert(abs(MADLIB_SCHEMA.dist_norm1(a, b) - 48) < 1e-6, 'Wrong answer: MADLIB_SCHEMA.dist_norm1() example'),
    MADLIB_SCHEMA.assert(abs(MADLIB_SCHEMA.dist_norm2(a, b) - 22.6274169979695) < 1e-6, 'Wrong answer: MADLIB_SCHEMA.dist_norm2() example'),
    MADLIB_SCHEMA.assert(abs(MADLIB_SCHEMA.dist_pnorm(a, b, 5) - 15.585086360695) < 1e-6, 'Wrong answer: MADLIB_SCHEMA.dist_pnorm() example'),
    MADLIB_SCHEMA.assert(abs(MADLIB_SCHEMA.dist_inf_norm(a, b) - 14) < 1e-6, 'Wrong answer: MADLIB_SCHEMA.dist_inf_norm() example'),
    MADLIB_SCHEMA.assert(abs(MADLIB_SCHEMA.squared_dist_norm2(a, b) - 512) < 1e-6, 'Wrong answer: MADLIB_SCHEMA.squared_dist_norm2() example'),
    MADLIB_SCHEMA.assert(abs(MADLIB_SCHEMA.dist_angle(a, b) - 0.17106899659286) < 1e-6, 'Wrong answer: MADLIB_SCHEMA.dist_angle() example'),
    MADLIB_SCHEMA.assert(abs(MADLIB_SCHEMA.dist_tanimoto(a, b) - 0.0498733684005455) < 1e-6, 'Wrong answer: MADLIB_SCHEMA.dist_tanimoto() example')
FROM two_vectors
WHERE id = 2;

